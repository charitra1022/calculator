<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/expressionDisplay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20sp"
            android:fontFamily="monospace"
            android:gravity="end"
            android:paddingLeft="10sp"
            android:paddingRight="10sp"
            android:textIsSelectable="true"
            android:textSize="50sp" />

        <TextView
            android:id="@+id/resultDisplay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20sp"
            android:fontFamily="monospace"
            android:gravity="end"
            android:paddingLeft="10sp"
            android:paddingRight="10sp"
            android:textIsSelectable="true"
            android:textSize="40sp" />

        <LinearLayout
            android:id="@+id/buttonLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="bottom"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/firstLineButtons"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/clearBtn"
                    style="?android:attr/buttonBarButtonStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="#000000FF"
                    android:text="C"
                    android:textColor="#FF0000"
                    android:textSize="34sp"
                    tools:ignore="TextContrastCheck" />

                <Button
                    android:id="@+id/bracketBtn"
                    style="?android:attr/buttonBarButtonStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="#000000FF"
                    android:text="()"
                    android:textColor="#037CFF"
                    android:textSize="34sp"
                    tools:ignore="TextContrastCheck" />

                <Button
                    android:id="@+id/divisionBtn"
                    style="?android:attr/buttonBarButtonStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="#000000FF"
                    android:text="รท"
                    android:textColor="#037CFF"
                    android:textSize="34sp"
                    tools:ignore="TextContrastCheck" />

                <Button
                    android:id="@+id/backspaceBtn"
                    style="?android:attr/buttonBarButtonStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="#000000FF"
                    android:text="\u232b"
                    android:textColor="#037CFF"
                    android:textSize="34sp"
                    android:textStyle="bold"
                    tools:ignore="TextContrastCheck" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/secondLineButtons"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/sevenBtn"
                    style="?android:attr/buttonBarButtonStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="#000000FF"
                    android:text="7"
                    android:textColor="#6C6A6A"
                    android:textSize="34sp" />

                <Button
                    android:id="@+id/eightBtn"
                    style="?android:attr/buttonBarButtonStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="#000000FF"
                    android:text="8"
                    android:textColor="#6C6A6A"
                    android:textSize="34sp" />

                <Button
                    android:id="@+id/nineBtn"
                    style="?android:attr/buttonBarButtonStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="#000000FF"
                    android:text="9"
                    android:textColor="#6C6A6A"
                    android:textSize="34sp" />

                <Button
                    android:id="@+id/multiplyBtn"
                    style="?android:attr/buttonBarButtonStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="#000000FF"
                    android:text="ร"
                    android:textColor="#037CFF"
                    android:textSize="34sp"
                    tools:ignore="TextContrastCheck" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/thirdLineButtons"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/fourBtn"
                    style="?android:attr/buttonBarButtonStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="#000000FF"
                    android:text="4"
                    android:textColor="#6C6A6A"
                    android:textSize="34sp" />

                <Button
                    android:id="@+id/fiveBtn"
                    style="?android:attr/buttonBarButtonStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="#000000FF"
                    android:text="5"
                    android:textColor="#6C6A6A"
                    android:textSize="34sp" />

                <Button
                    android:id="@+id/sixBtn"
                    style="?android:attr/buttonBarButtonStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="#000000FF"
                    android:text="6"
                    android:textColor="#6C6A6A"
                    android:textSize="34sp" />

                <Button
                    android:id="@+id/subtractBtn"
                    style="?android:attr/buttonBarButtonStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="#000000FF"
                    android:text="-"
                    android:textColor="#037CFF"
                    android:textSize="34sp"
                    tools:ignore="TextContrastCheck" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/fourthLineButtons"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/oneBtn"
                    style="?android:attr/buttonBarButtonStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="#000000FF"
                    android:text="1"
                    android:textColor="#6C6A6A"
                    android:textSize="34sp" />

                <Button
                    android:id="@+id/twoBtn"
                    style="?android:attr/buttonBarButtonStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="#000000FF"
                    android:text="2"
                    android:textColor="#6C6A6A"
                    android:textSize="34sp" />

                <Button
                    android:id="@+id/threeBtn"
                    style="?android:attr/buttonBarButtonStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="#000000FF"
                    android:text="3"
                    android:textColor="#6C6A6A"
                    android:textSize="34sp" />

                <Button
                    android:id="@+id/addBtn"
                    style="?android:attr/buttonBarButtonStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="#000000FF"
                    android:text="+"
                    android:textColor="#037CFF"
                    android:textSize="34sp"
                    tools:ignore="TextContrastCheck" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/fifthLineButtons"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/plusMinusBtn"
                    style="?android:attr/buttonBarButtonStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="#000000FF"
                    android:text="+/-"
                    android:textColor="#6C6A6A"
                    android:textSize="34sp" />

                <Button
                    android:id="@+id/zeroBtn"
                    style="?android:attr/buttonBarButtonStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="#000000FF"
                    android:text="0"
                    android:textColor="#6C6A6A"
                    android:textSize="34sp" />

                <Button
                    android:id="@+id/periodBtn"
                    style="?android:attr/buttonBarButtonStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="#000000FF"
                    android:text="."
                    android:textColor="#6C6A6A"
                    android:textSize="34sp" />

                <Button
                    android:id="@+id/equalBtn"
                    style="?android:attr/buttonBarButtonStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="#037CFF"
                    android:text="="
                    android:textColor="#FFFFFF"
                    android:textSize="34sp"
                    app:backgroundTint="#037CFF"
                    tools:ignore="TextContrastCheck" />
            </LinearLayout>


        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>